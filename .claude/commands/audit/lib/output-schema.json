{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UX Blockers Audit Output",
  "description": "Schema enforcing field-length caps to prevent context exhaustion. Max 50 findings total.",
  "type": "object",
  "required": ["meta", "summary", "blockers", "warnings", "deep_dive_needed"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["timestamp", "mode", "duration_ms", "checks_run", "files_scanned"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of audit run"
        },
        "mode": {
          "type": "string",
          "enum": ["quick", "standard", "deep"],
          "description": "Audit mode that was executed"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Wall-clock milliseconds for audit execution"
        },
        "checks_run": {
          "type": "integer",
          "minimum": 0,
          "maximum": 56,
          "description": "Number of checks executed (56 = all)"
        },
        "files_scanned": {
          "type": "integer",
          "minimum": 0,
          "description": "Total source files scanned"
        },
        "categories_scanned": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["FORM", "FILTER", "ACTION", "DATA", "NAV", "ARCH"]
          }
        },
        "inventory_staleness": {
          "type": "object",
          "description": "Age of .claude/state inventory files in days",
          "additionalProperties": {
            "type": "number"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["blockers", "warnings", "clean"],
      "properties": {
        "blockers": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of findings with confidence >= 0.95"
        },
        "warnings": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of findings with confidence 0.80-0.94"
        },
        "clean": {
          "type": "integer",
          "minimum": 0,
          "description": "Count of checks that passed (no matches)"
        }
      }
    },
    "blockers": {
      "type": "array",
      "maxItems": 25,
      "items": {
        "$ref": "#/$defs/finding"
      },
      "description": "High-confidence user-blocking issues (>= 0.95)"
    },
    "warnings": {
      "type": "array",
      "maxItems": 25,
      "items": {
        "allOf": [
          { "$ref": "#/$defs/finding" },
          {
            "properties": {
              "verify_by": {
                "type": "string",
                "maxLength": 150,
                "description": "How to manually verify this warning"
              }
            },
            "required": ["verify_by"]
          }
        ]
      },
      "description": "Moderate-confidence issues needing verification (0.80-0.94)"
    },
    "deep_dive_needed": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["forms", "filters", "actions", "data-flow", "navigation", "fault-lines"]
      },
      "description": "Categories that warrant deep investigation"
    }
  },
  "$defs": {
    "finding": {
      "type": "object",
      "required": ["id", "file", "line", "check", "evidence", "user_impact", "confidence"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(FORM|FILTER|ACTION|DATA|NAV|ARCH)-B\\d{3}$",
          "description": "Check ID from checks.json"
        },
        "file": {
          "type": "string",
          "maxLength": 120,
          "description": "Relative path from project root"
        },
        "line": {
          "type": "integer",
          "minimum": 1,
          "description": "Line number of finding"
        },
        "check": {
          "type": "string",
          "maxLength": 60,
          "description": "Human-readable check name"
        },
        "evidence": {
          "type": "string",
          "maxLength": 200,
          "description": "CAPPED at 200 chars. The matching code or pattern evidence."
        },
        "user_impact": {
          "type": "string",
          "maxLength": 100,
          "description": "CAPPED at 100 chars. What the user experiences."
        },
        "confidence": {
          "type": "number",
          "minimum": 0.60,
          "maximum": 1.0,
          "description": "Final confidence after adjustment (base * context)"
        },
        "category": {
          "type": "string",
          "enum": ["FORM", "FILTER", "ACTION", "DATA", "NAV", "ARCH"]
        }
      }
    }
  }
}
